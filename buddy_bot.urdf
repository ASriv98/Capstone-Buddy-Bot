<?xml version="1.0"?>
<robot name="buddy_bot">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  <material name="black">
    <color rgba="0 0 0 0"/>
  </material>

  <material name="cyan">
    <color rgba="0 0.9 0.9 1.0"/>
  </material>


  <link name="base_link">
    <visual>
      <geometry>
        <box size=".6096 .4572 .3072"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="cyan"/>
    </visual>
    <collision>
      <geometry>
        <box size=".6096 .4572 .3072"/>
      </geometry>
    </collision>
  </link>

  <link name = "front_wheel_bar">
    <visual>
      <geometry>
        <box size = ".1 .67 .14"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name = "blue"/>
    </visual>
    <collision>
      <geometry>
        <box size = ".1 .67 .14"/>
      </geometry>
    </collision>
  </link>

  <joint name = 'base_to_front_wheel_bar' type = 'fixed'>
    <parent link = 'base_link'/>
    <child link = 'front_wheel_bar'/>
    <origin xyz = '.28 0 -.2'/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.095"/>
      </geometry>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.095"/>
      </geometry>
    </collision>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.095"/>
      </geometry>
      <origin rpy="-1.6 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.095"/>
      </geometry>
    </collision>
  </link>

  <joint name="bar_to_front_wheel_L" type="continuous">
    <parent link="front_wheel_bar"/>
    <child link="left_wheel"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0.34 -.08"/>
  </joint>

  <joint name="bar_to_front_wheel_R" type="continuous">
    <parent link="front_wheel_bar"/>
    <child link="right_wheel"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 -0.34 -.08"/>
  </joint>

  <link name = "back_wheel_bar">
    <visual>
      <geometry>
        <box size = ".1 .1 .14"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name = "blue"/>
    </visual>
    <collision>
      <geometry>
        <box size = ".1 .1 .14"/>
      </geometry>
    </collision>
  </link>

  <joint name = 'base_to_back_wheel_bar' type = 'fixed'>
    <parent link = 'base_link'/>
    <child link = 'back_wheel_bar'/>
    <origin xyz = '-.28 0 -.2'/>
  </joint>

  <link name="back_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.095"/>
      </geometry>
      <origin rpy="-1.6 0 0" xyz="-0.1 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.095"/>
      </geometry>
    </collision>
  </link>

  <joint name="back_bar_to_back_wheel" type="continuous">
    <parent link="back_wheel_bar"/>
    <child link="back_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 -.08"/>
  </joint>

  <transmission name="back_wheel_turn">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="$back_wheel_axis">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="back_bar_to_back_wheel">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <link name = 'lidar_mount'>
    <visual>
      <geometry>
        <box size = '.03 .03 .42'/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -.21"/>
      <material name = 'cyan'/>
    </visual>
    <collision>
      <geometry>
        <box size = '.03 .03 .42'/>
      </geometry>
    </collision>
  </link>

  <joint name="base_to_lidar_mount" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_mount"/>
    <origin xyz="-.3048 0 .50"/>
  </joint>

  <link name = 'LIDAR'>
    <visual>
      <geometry>
        <cylinder length = '.03' radius = '.04'/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name= "black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length = '.03' radius = '.04'/>
      </geometry>
    </collision>
  </link>

  <joint name = 'lidar_to_mount' type="fixed">
    <parent link="lidar_mount"/>
    <child link="LIDAR"/>
    <origin xyz="0 0 0"/>
  </joint>

  <link name = 'front_right_top'>
    <visual>
      <geometry>
        <box size = '.03 .03 .35'/>
      </geometry>
      <origin rpy="0 -.6 0" xyz=".4 0.215 0"/>
      <material name = 'cyan'/>
    </visual>
    <collision>
      <geometry>
        <box size = '.03 .03 .35'/>
      </geometry>
    </collision>
  </link>

  <link name = 'front_left_top'>
    <visual>
      <geometry>
        <box size = '.03 .03 .35'/>
      </geometry>
      <origin rpy="0 -.6 0" xyz=".4 -0.215 0"/>
      <material name = 'cyan'/>
    </visual>
    <collision>
      <geometry>
        <box size = '.03 .03 .35'/>
      </geometry>
    </collision>
  </link>

  <link name = 'front_right_bottom'>
    <visual>
      <geometry>
        <box size = '.03 .03 .1677'/>
      </geometry>
      <origin rpy="0 -1.6 0" xyz="0.42 .215 -.13"/>
      <material name = 'cyan'/>
    </visual>
    <collision>
      <geometry>
        <box size = '.03 .03 .1677'/>
      </geometry>
    </collision>
  </link>

  <link name = 'front_left_bottom'>
    <visual>
      <geometry>
        <box size = '.03 .03 .1677'/>
      </geometry>
      <origin rpy="0 -1.6 0" xyz="0.42 -.215 -.13"/>
      <material name = 'cyan'/>
    </visual>
    <collision>
      <geometry>
        <box size = '.03 .03 .1677'/>
      </geometry>
    </collision>
  </link>

  <link name = 'front_connector'>
    <visual>
      <geometry>
        <box size = '.03 .03 .4572'/>
      </geometry>
      <origin rpy="1.6 0 0" xyz=".5 0 -.13"/>
      <material name = 'cyan'/>
    </visual>
    <collision>
      <geometry>
        <box size = '.03 .03 .4572'/>
      </geometry>
    </collision>
  </link>

  <joint name = 'F_R_T_to_base' type = 'fixed'>
    <parent link="base_link"/>
    <child link="front_right_top"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name = 'F_L_T_to_base' type = 'fixed'>
    <parent link="base_link"/>
    <child link="front_left_top"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name = 'F_R_B_to_base' type = 'fixed'>
    <parent link="base_link"/>
    <child link="front_right_bottom"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name = 'F_L_B_to_base' type = 'fixed'>
    <parent link="base_link"/>
    <child link="front_left_bottom"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name = 'front_connector_to_FRT' type = 'fixed'>
    <parent link="front_right_top"/>
    <child link="front_connector"/>
    <origin xyz="0 0 0"/>
  </joint>

   <!-- Gazebo plugin for ROS Control -->
