<launch>
  <param name="robot_description" value="$(find buddybot_description)/urdf/buddybot.urdf"/>  

<!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find buddybot_gazebo)/worlds/buddybot.world"/>
    <!-- more default parameters can be changed here -->
  </include>
  <!-- Spawn a robot into Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-file $(find buddybot_description)/urdf/buddybot.urdf -urdf -z 1 -model buddybot" />
</launch>
